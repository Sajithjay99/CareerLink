<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logoonb2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFACAC"
    tools:context=".Onboard1">

    <ImageView
        android:id="@+id/onboading1img"
        android:layout_width="302dp"
        android:layout_height="324dp"
        app:layout_constraintBottom_toTopOf="@+id/onb1txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoonb1"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/onboading1img" />

    <ImageView
        android:id="@+id/logoonb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/onboading1img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/onb1txt"
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="serif"

        android:text="@string/onb1title"
        android:textColor="@color/onb_txtcolor"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/onb1button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboading1img" />

    <Button
        android:id="@+id/onb1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="267dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="@color/HomePgButton_color"
        android:text="@string/button_onbScreen1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onb1txt" />

    <ImageView
        android:id="@+id/onb1dots"
        android:layout_width="54dp"
        android:layout_height="18dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onb1txt"
        app:srcCompat="@drawable/onb1dots" />

</androidx.constraintlayout.widget.ConstraintLayout>